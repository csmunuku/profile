list_all_regions()
{
  ask_region
  aws ec2 describe-regions ${REGION} --query "Regions[].{Name:RegionName}" --output text
  echo "More info from https://docs.aws.amazon.com/cli/latest/reference/ec2/describe-regions.html"
  echo
}
