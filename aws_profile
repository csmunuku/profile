#####################################################################
get_all_tags()
{
  ask_region
  ask_profile
  if [[ $# -eq 0 ]]; then
     aws ec2 describe-tags --filters "Name=value,Values=*" ${REGION} ${PRO} | jq -cr '.Tags[].Value' | sort -u
     echo
  else
     aws ec2 describe-tags --filters "Name=value,Values=*${1}*" ${REGION} ${PRO} | jq -cr '.Tags[].Value' | sort -u
     echo
  fi
}
alias tags="get_all_tags"
